{
  "name": "@react-bridging/serve",
  "version": "0.0.0-experimental-f8106db",
  "description": "Production application server for React Bridging",
  "bugs": {
    "url": "https://github.com/khulnasoft/react-bridging/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/khulnasoft/react-bridging",
    "directory": "packages/react-bridging-serve"
  },
  "license": "MIT",
  "exports": {
    "./package.json": "./package.json"
  },
  "bin": {
    "react-bridging-serve": "bin.js"
  },
  "scripts": {
    "build": "wireit"
  },
  "wireit": {
    "build": {
      "command": "tsup",
      "files": [
        "*.ts",
        "bin.js",
        "tsconfig.json",
        "package.json"
      ],
      "output": [
        "dist/**"
      ]
    }
  },
  "dependencies": {
    "@react-bridging/express": "workspace:*",
    "@react-bridging/node": "workspace:*",
    "compression": "^1.7.4",
    "express": "^4.19.2",
    "get-port": "5.1.1",
    "morgan": "^1.10.0",
    "source-map-support": "^0.5.21"
  },
  "peerDependencies": {
    "react-bridging": "workspace:*"
  },
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/express": "^4.17.9",
    "@types/morgan": "^1.9.2",
    "@types/source-map-support": "^0.5.6",
    "tsup": "^8.3.0",
    "typescript": "^5.1.6",
    "wireit": "0.14.9"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist/",
    "bin.js",
    "CHANGELOG.md",
    "LICENSE.md",
    "README.md"
  ]
}
